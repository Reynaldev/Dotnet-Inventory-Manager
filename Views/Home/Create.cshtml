@{
    ViewData["Title"] = "Add New Item";
}

<h2>Add New Data</h2>

<br><br><br>

<form action="Create" method="post">
    <div class="mb-3 row">
        <label for="ItemName" class="col-sm-2 col-form-label">Item Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="ItemName">
        </div>
    </div>  
    <div class="mb-3 row">
        <label for="DatePurchased" class="col-sm-2 col-form-label">Date Purchased</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" id="DatePurchased">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="Quality" class="col-sm-2 col-form-label">Quality</label>
        <div class="form-check col-sm-2">
            <input type="radio" class="form-check-input" value="Good" name="Quality" id="quality-good">
            <label class="form-check-label" for="quality-good">Good</label>
        </div>
        <div class="form-check col">
            <input type="radio" class="form-check-input" value="Bad" name="Quality" id="quality-bad">
            <label class="form-check-label" for="quality-bad">Bad</label>
        </div>
    </div>
    <button type="submit" class="btn btn-dark">Add</button>
</form>

<br><br><br>