@model IEnumerable<Inventory>;

@{
    ViewData["Title"] = "Home Page";
}

<h2>Inventory Data</h2>

<br><br><br>

<table class="table table-striped justify-content-center">
    <thead>
        <tr>
            <th>ID</th>
            <th>Item Name</th>
            <th>Date Purchased</th>
            <th>Quality</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Inventory inventory in Model)
        {
            <tr>
                <td>@Html.DisplayFor(model => inventory.Id)</td>
                <td>@Html.DisplayFor(model => inventory.ItemName)</td>
                <td>@Html.DisplayFor(model => inventory.DatePurchased)</td>
                <td>@Html.DisplayFor(model => inventory.Quality)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Home", new { id = inventory.Id })
                    | 
                    @Html.ActionLink("Delete", "Delete", "Home", new { id = inventory.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-area="" asp-controller="Home" asp-action="Create">+ Add New</a>

